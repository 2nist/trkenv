{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TRK Module Manifest",
  "type": "object",
  "required": ["id","kind"],
  "properties": {
    "id": {"type":"string"},
    "kind": {"type":"string","enum":["panel","tool","job","device","dataset","exporter","template"]},
    "name": {"type":"string"},
    "tags": {"type":"array","items":{"type":"string"}},
    "entryFrontend": {"type":"string"},
    "entryBackend": {"type":"string"},
    "ports": {"type":"array","items":{"type":"string"}},
    "inputs": {"type":"object"},
    "outputs": {"type":"object"},
    "promoteTo": {"type":"array","items":{"type":"string"}},
    "safety": {"type":"object"}
  },
  "additionalProperties": true
}
